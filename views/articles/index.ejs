<%- include('../partials/header.ejs') %> 
<%- include('../partials/navbar.ejs') %>
<body>

<div class="container mt-4">
    <h1>Lista de postagens: </h1>
    <% if(articles.length > 0){ %>
    <% articles.forEach(article => { %> 
    <div class="card mt-4">
        <div class="card-header">
            <h2><%= article.title %> </h2>
        </div>
        <div class="card-body">
            <p><b>Categoria:</b> <%= article.category.title %></p>
            <small><b>Postado em:</b> <%= article.createdAt %> </small>
        </div>
        <div class="card-footer">
            <a href="/articles/<%= article.slug %> " class="btn btn-dark">Ler postagem</a>
        </div>
    </div>
    <% }) %> 
    
    <% }else{ %>
    
        <h2 class="mt-4">Não há postagens para exibir</h2>
    
    <% } %>
</div>
    
</body>
<%- include('../partials/footer.ejs') %> 