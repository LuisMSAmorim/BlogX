<%- include('../partials/header.ejs') %> 
<%- include('../partials/navbar.ejs') %>
<body>

<div class="container mt-4">
    <h1>Postagens da categoria <%= category.title %> </h1>
    <% articles.forEach(article => {  %> 
        <div class="card mt-4">
            <div class="card-header">
                <h2><%= article.title %> </h2>
            </div>
            <div class="card-body">
                <small><b>Postado em:</b> <%= article.createdAt %> </small>
            </div>
            <div class="card-footer">
                <a href="/articles/<%= article.slug %> " class="btn btn-dark">Ler postagem</a>
            </div>
        </div>
    <% }) %> 
</div>

</body>
